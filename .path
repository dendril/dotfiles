# if npm available, add it to the PATH variable
NPM=$(command -v npm 2> /dev/null);

if [[ $? -eq 0 ]]; then
	PATH="$(NPM bin -g 2> /dev/null):$PATH"
fi

# if pvm available, add it to the PATH variable
PVM=$(command -v pvm 2> /dev/null);

if [[ $? -eq 0 ]]; then
	PATH="$(PVM -p 2> /dev/null):$PATH"
fi
